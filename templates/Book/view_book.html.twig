{% extends 'base.html.twig' %}

{% block title %}
	Books
{% endblock %}

{% block body %}

	{# <p> {{ dump(book_list) }} </p>  #}


	{% if book_list %}

		<div class="grid-container">
			{% for book in book_list %}
				<div class="grid-item">
					<div class="card border-dark  mb-3" style="max-width: 40rem;">
						<div class="card-header">{{ book.title }}</div>
						<div class="card-body">
							<h4 class="card-title">{{ book.author }}</h4>
							<p class="card-text">{{ book.department }}</p>
							<button type="button"  data-book-id="{{ book|json_encode() }}">Info</button>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	{% else %}
		<p>No books to display</p>
	{% endif %}

	{# book details modal start #}

	<div class="modal text-center">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">
						<span class="bookTitle">
							Book title
						</span>
					</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<h5 class="bookAuthor">Book Author</h5>
					<h5 class="bookDepartment ">Book Department</h5>
				</div>
				<div class="modal-footer">

					<button type="button" >Close</button>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
